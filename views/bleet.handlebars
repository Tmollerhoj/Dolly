<div class="text-center">
  <div class="card">
    <h4>@{{user.username}}</h4>
    <p>{{content}}</p>
    <p id="date">{{formated_date date}}</p>
    {{#if logged_in}}
  </div>
<form class="form comment-form">
  <h5>Add a Comment</h5>
  <div class="form-group">
    <label for="bleet-desc">Comment:</label>
    <textarea class="form-input" id="comment-text" name="bleet-desc"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id="comment-btn" data-id="{{id}}">Comment</button>
  </div>
</form>
</div>
</div>

<div class = "comment-section">
<h5>Comments:</h5>
{{#each comments as |comment| }}
<div class="row mb-4 project card">
  <div class="col-md-5">
    <p class="bleet-username">@{{comment.user.username}}</p>
    
  </div>
  <div class="col-md-7">
    <p>
      {{comment.content}}
      <p class="bleet-date" id="date">{{formated_date comment.date_created}}</p>
    </p>
  </div>
</div>
{{/each}}
</div>
{{/if}}
<script src="/js/bleet.js"></script>