<div class="text-center">
  <h5>{{content}}</h5>
  <p>Created by {{user.username}} on {{formated_date date}}</p>
  <p>
  </p>
  {{#if logged_in}}

<form class="form comment-form">
  <h5>Add a Comment</h5>
  <div class="form-group">
    <label for="bleet-desc">Comment:</label>
    <textarea class="form-input" id="comment-text" name="bleet-desc"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id="comment-btn" data-id="{{id}}">Comment</button>
  </div>
</form>
</div>
</div>

<div class = "comment-section">
<h5>Comments:</h5>
{{#each comments as |comment| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <p>{{comment.user.username}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}
</div>
{{/if}}
<script src="/js/bleet.js"></script>